{
  "name": "token-slice",
  "version": "0.0.2",
  "description": "A small library for extracting text wrapped with arbitrary tokens.",
  "author": "Michael Clayton <mclayton@redhat.com>",
  "repository": "https://github.com/redhataccess/",
  "license": "MIT",
  "main": "./dist/tsc/main.js",
  "exports": {
    "import": "./dist/esm/main.js",
    "require": "./dist/cjs/main.js"
  },
  "types": "./dist/tsc/main.d.ts",
  "scripts": {
    "lint": "eslint src/ --ext .js,.ts",
    "test": "jest",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node",
    "docs": "typedoc --entryPoints src/main.ts",
    "build": "tsc -p tsconfig.json",
    "build-all": "npm run clean && npm run build && npm run esbuild-esm && npm run esbuild-cjs",
    "esbuild-esm": "esbuild src/main.ts --platform=neutral --bundle --format=esm --minify --sourcemap=external --outfile=dist/esm/main.js",
    "esbuild-esm:dev": "esbuild src/main.ts --platform=neutral --bundle --format=esm --outfile=dist/esm/main.js",
    "esbuild-esm:watch": "esbuild src/main.ts --platform=neutral --bundle --format=esm --watch --outfile=dist/esm/main.js",
    "esbuild-cjs": "esbuild src/main.ts --bundle --platform=node --format=cjs --minify --sourcemap=external --outfile=dist/cjs/main.js",
    "esbuild-cjs:dev": "esbuild src/main.ts --bundle --platform=node --format=cjs --sourcemap=external --outfile=dist/cjs/main.js",
    "esbuild-cjs:watch": "esbuild src/main.ts --bundle --platform=node --format=cjs --watch --sourcemap=external --outfile=dist/cjs/main.js"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "esbuild": "^0.11.11",
    "eslint": "^7.22.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.3"
  }
}
